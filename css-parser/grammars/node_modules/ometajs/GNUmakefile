SUFFIX=.ometajs

all: lib/ometajs/grammars/BSJSParser.js \
	lib/ometajs/grammars/BSJSIdentity.js \
	lib/ometajs/grammars/BSJSTranslator.js

lib/ometajs/grammars/%.js: lib/ometajs/grammars/%.ometajs
	./bin/ometajs2js -b --root "../../../" --runtime ".." -i $< -o $@

test:
	npm test

docs:
	docco lib/ometajs/*.js

.PHONY: all docs
